package Thread;

public class TerminateThread implements Runnable{
	boolean flag = true;
	String name ;
	
	
public TerminateThread(String name) {
		
		this.name = name;
	}

@Override
public void run() {
	int i=0;
	while (flag) {
		System.out.println(name+"-->"+i++);
	}
	
}

public void terminate_() {
	this.flag=false;
}


public static void main(String[] args) {
	
}
}
