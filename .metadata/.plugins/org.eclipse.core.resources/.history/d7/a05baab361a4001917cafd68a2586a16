package Thread;

import java.text.SimpleDateFormat;
import java.util.Date;

/**使用sleep来阻塞进程
 * @author Administrator
 *
 */
public class unsafe12306 implements Runnable {
	int ticketNum = 100;

	@Override
	public void run() {
		while (true) {
			if (ticketNum < 0) {
				break;
			}
			try {
				Thread.sleep(200);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			System.out.println(Thread.currentThread().getName() + "-->" + ticketNum--);
		}
	}

	public static void main(String[] args) {

		unsafe12306 w = new unsafe12306();
		System.out.println(Thread.currentThread().getName());
		new Thread(w, "马云").start();
		new Thread(w, "牛云").start();
		new Thread(w, "阿里云").start();

		num n = new num();
		new Thread(n, "number").start();

		Timede td = new Timede();
		new Thread(td, "时间------------->").start();

	}
}